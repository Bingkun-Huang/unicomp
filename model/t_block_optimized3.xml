<mujoco model="t_block_dual">

  <visual>
  <quality shadowsize="0"/>
  </visual>


  <asset>
    <!-- Checker texture (dark gray / light gray) -->
    <texture name="tex_floor_checker" type="2d" builtin="checker"
             width="512" height="512"
             rgb1="0.90 0.90 0.90" rgb2="0.72 0.72 0.72"/>

    <!-- Material using that texture -->
    <material name="mat_floor_checker"
              texture="tex_floor_checker"
              texrepeat="20 20" texuniform="true"
              reflectance="0.0" shininess="0.2" specular="0.1"
              rgba="1 1 1 1"/>
  </asset>


  <compiler angle="radian"/>
  <option timestep="0.01"/>
  <default>
    <geom friction="0.5 0.005 0.0001" density="1000"/>
  </default>
  <worldbody>
    <light name="scene_light" pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" type="plane" size="50 50 0.1" pos="0 0 0" material="mat_floor_checker" rgba="1 1 1 1"/>

    
    <body name="T_siconos" pos="0 0 0.1" quat="0.5 0.5 0.5 0.5">
      <freejoint name="root_siconos"/> 
      <geom name="T_stem_s" type="box" size="0.02 0.02 0.15" pos="0 0 -0.05" 
            rgba="0.2 0.4 0.8 1" conaffinity="0" contype="0"/>
      <geom name="T_top_s" type="box" size="0.1 0.02 0.02" pos="0 0 0.12" 
            rgba="0.8 0.2 0.2 1" conaffinity="0" contype="0"/>
      <geom name="T_top_ss" type="box" size="0.02 0.1 0.02" pos="0 0 0.12" 
            rgba="0.8 0.2 0.2 1" conaffinity="0" contype="0"/>
      <geom name="T_top_l" type="box" size="0.1 0.02 0.02" pos="0 0 -0.18" 
            rgba="0.8 0.2 0.2 1" conaffinity="0" contype="0"/>
      <geom name="T_top_ll" type="box" size="0.02 0.1 0.02" pos="0 0 -0.18" 
            rgba="0.8 0.2 0.2 1" conaffinity="0" contype="0"/>   
      <!-- <geom name="T_top_ttt" type="box" size="0.02 0.5 0.02" pos="0 0.25 -0.03" 
            rgba="0.8 0.2 0.2 1" conaffinity="0" contype="0"/>                        -->
          
    </body>

    <body name="T_mujoco" pos="0 0 0.3">
      <freejoint name="root_mujoco"/>
      <geom name="T_stem_m" type="box" size="0.02 0.02 0.15" pos="0 0 -0.05" 
            rgba="0.2 0.4 0.8 0.0"/>
      <geom name="T_top_m" type="box" size="0.1 0.02 0.02" pos="0 0 0.12" 
            rgba="0.8 0.2 0.2 0.0"/>
      <geom name="T_top_mm" type="box" size="0.02 0.1 0.02" pos="0 0 -0.12" 
            rgba="0.8 0.2 0.2 0.0"/>           
    </body>
     <body name="target_mocap" mocap="true" pos="0.08 -0.35 0.08">

      <geom type="sphere" size="0.01" rgba="1 0 0 0.4" contype="0" conaffinity="0"/>
    </body>   
  </worldbody>
</mujoco>